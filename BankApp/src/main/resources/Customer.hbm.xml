<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name = "com.app.entity.Customer" table = "customers">

      <id name = "accountNo" type = "long" column = "accountno">
       <generator class="increment"></generator>
      </id>
      
      <property name = "name" column = "name" type = "string"/>
      <property name = "email" column = "email" type = "string"/>
      <property name = "password" column = "password" type = "string"/>
      <property name = "address" column = "address" type = "string"/>
      <property name = "dob" column = "dob" type = "string"/>
      <property name = "phoneNo" column = "phone" type = "long"/>
      <property name = "balance" column = "balance" type = "double"/>
      
   </class>
 
</hibernate-mapping>